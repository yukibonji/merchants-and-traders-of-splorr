@model Pdg.Splorr.MerchantsAndTraders.Web.Models.ConfirmDeleteModel

@using (Html.BeginForm("Remove", "Agent", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Confirm)
        @Html.CheckBoxFor(m => m.Confirm)
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>Remove</button>
    <a href="@Url.Action("Index","Agent")"><span class="glyphicon glyphicon-arrow-left"></span>Back To List</a>
}