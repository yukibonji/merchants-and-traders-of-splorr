@model IEnumerable<Pdg.Splorr.MerchantsAndTraders.DataLayer.AgentListItem>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Agent</th>
            <th>World</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AgentName 
                    <a href="@Url.Action("Detail", new { id=item.AgentId })"><span class="glyphicon glyphicon-eye-open"></span>View</a>
                    <a href="@Url.Action("Edit", new { id=item.AgentId })"><span class="glyphicon glyphicon-pencil"></span>Edit</a>
                    <a href="@Url.Action("Remove", new { id=item.AgentId })"><span class="glyphicon glyphicon-remove"></span>Remove</a>
                </td>
                <td>@item.WorldName</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                <a href="@Url.Action("Add")"><span class="glyphicon glyphicon-plus"></span>New Agent</a>
            </td>
        </tr>
    </tfoot>
</table>