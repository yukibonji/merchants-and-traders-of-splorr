@model Pdg.Splorr.MerchantsAndTraders.Web.Models.NewAgentModel

@using (Html.BeginForm("Add", "Agent", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m=>m.AgentName)
        @Html.TextBoxFor(m => m.AgentName, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.WorldId)
        @Html.DropDownListFor(m=>m.WorldId,(IEnumerable<SelectListItem>)ViewBag.AvailableWorldList,new { @class="form-control" })
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span>Add</button>
}