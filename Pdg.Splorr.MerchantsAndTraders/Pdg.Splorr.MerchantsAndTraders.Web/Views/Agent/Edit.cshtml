@model Pdg.Splorr.MerchantsAndTraders.Web.Models.EditAgentModel

@using (Html.BeginForm("Edit", "Agent", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.AgentId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.AgentName)
        @Html.TextBoxFor(m => m.AgentName, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>Update</button>
    <a href="@Url.Action("Index","Agent")"><span class="glyphicon glyphicon-arrow-left"></span>Back To List</a>
}